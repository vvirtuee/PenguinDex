<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutAnimation="@anim/layout_rotation"
    android:orientation="vertical"
    android:padding="@dimen/extraPadding"
    tools:context=".Fragments.IntroFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/chewy"
        android:gravity="center_horizontal"
        android:text="@string/introText"
        android:textSize="@dimen/titles" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme"
        android:text="@string/introParagraph1"
        android:textSize="@dimen/paragraphs" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/images"
        android:src="@drawable/penguins" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme"
        android:text="@string/introParagraph2"
        android:textSize="@dimen/paragraphs" />

</LinearLayout>